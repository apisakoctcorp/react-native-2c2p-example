<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#d2d7d9" />
            <stroke
                android:width="1dp"
                android:color="@color/my2c2psdk_grey" />
            <corners
                android:radius="5dp" /> 
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="#d2d7d9" />
            <stroke
                android:width="1dp"
                android:color="@color/my2c2psdk_grey" />
            <corners
                android:radius="5dp" /> 
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
        android:angle="90"
        android:endColor="#fafafa"
        android:startColor="#d2d7d9" />
            
            <stroke
                android:width="1dp"
                android:color="@color/my2c2psdk_grey" />
            <corners
                android:radius="5dp" /> 
        </shape>
    </item>
</selector>