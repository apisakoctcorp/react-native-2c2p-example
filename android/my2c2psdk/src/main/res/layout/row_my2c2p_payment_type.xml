<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_row"
    android:background="@drawable/selector_lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_payment_type_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:contentDescription="@string/my2c2pSDK_image_desc"
        android:cropToPadding="true"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:layout_weight="0.1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_payment_type_title"
        style="@style/My2c2pSDK.Widget.TextView.country"
        android:padding="12dip"
        android:layout_gravity="center_vertical"
        android:textColor="@color/my2c2psdk_dark_grey"
        android:layout_weight="1.0" />
    
    <ImageView
        android:id="@+id/iv_payment_type_next_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center|right"
        android:cropToPadding="true"
        android:padding="5dp"
        android:scaleType="fitCenter" 
        android:layout_weight="0.1"
        android:adjustViewBounds="true"/>
</LinearLayout>