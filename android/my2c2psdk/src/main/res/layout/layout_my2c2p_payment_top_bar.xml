<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
        android:id="@+id/rl_nav_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/my2c2psdk_blue_light"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:background="@drawable/payment_type_arrow"
            android:layout_height="50dip"
            android:layout_width="110dip"
            android:text="@string/my2c2pSDK_payment_type_payment"
            style="@style/My2c2pSDK.Widget.Button.PaymentType.Navigation" />

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
        	android:layout_height="match_parent" 
        	android:paddingLeft="15dip"
        	style="@style/My2c2pSDK.Widget.TextView.PaymentType.Navigation"
        	android:layout_toRightOf="@+id/btn_cancel" >
        </TextView>
</RelativeLayout>